<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuentaTipoComercio_modificarInformacion">

    <!--ScrollBar-->
    <ScrollView
        android:layout_width="390dp"
        android:layout_height="720dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Contenido: Título-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="100dp">

                <!--Título-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_titulo"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:typeface="serif" />

            </androidx.cardview.widget.CardView>

            <!--Contenido: Modificar nombre de comercio-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Comercio-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_nombreComercioMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_nombreComercioMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--EditText: Comercio-->
                <EditText
                    android:id="@+id/edt_cuentaTipoComercio_modificarInformacion_nombreComercio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>

            <!--Contenido: Modificar telefono-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Teléfono-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_telefonoMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_telefonoMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif"
                    tools:text="@string/tv_cuentaTipoComercio_modificarInformacion_telefonoMensaje" />

                <!--EditText: Teléfono-->
                <EditText
                    android:id="@+id/edt_cuentaTipoComercio_modificarInformacion_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:hint="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:inputType="phone"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />

            </androidx.cardview.widget.CardView>

            <!--TextView: Modificar nombre de usuario-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Usuario-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_nombreMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_nombreMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--EditText: Usuario-->
                <EditText
                    android:id="@+id/edt_cuentaTipoComercio_modificarInformacion_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif"
                    android:hint="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:autofillHints="@string/edt_cuentaTipoComercio_modificarInformacion_error"/>
            </androidx.cardview.widget.CardView>

            <!--Contenido: Modificar correo-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Correo-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_correoMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_correoMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--EditText: Correo-->
                <EditText
                    android:id="@+id/edt_cuentaTipoComercio_modificarInformacion_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif"
                    android:hint="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:autofillHints="@string/edt_cuentaTipoComercio_modificarInformacion_error"/>

            </androidx.cardview.widget.CardView>

            <!--Contenido: Modificar contraseña-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Contraseña-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_contraseniaMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_contraseniaMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--EditText: Contraseña-->
                <EditText
                    android:id="@+id/edt_cuentaTipoComercio_modificarInformacion_contrasenia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif"
                    android:hint="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:autofillHints="@string/edt_cuentaTipoComercio_modificarInformacion_error"/>
            </androidx.cardview.widget.CardView>

            <!--Contenido: Verificar Contraseña-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Verificar contraseña-->
                <TextView
                    android:id="@+id/tv_cuentaTipoComercio_modificarInformacion_verificarContraseniaMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_cuentaTipoComercio_modificarInformacion_verificarContraseniaMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--EditText: Verificar Contraseña-->
                <EditText
                    android:id="@+id/edt_cuentaTipoComercio_modificarInformacion_verificarContrasenia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif"
                    android:hint="@string/edt_cuentaTipoComercio_modificarInformacion_error"
                    android:autofillHints="@string/edt_cuentaTipoComercio_modificarInformacion_error"/>
            </androidx.cardview.widget.CardView>

            <!--Contenido: Pasar a la actividad "cuentaTipoCliente_PantallaPrincipal-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="100dp">

                <!--Button: Intent (pantallaPrincipalCliente)-->
                <Button
                    android:id="@+id/btn_cuentaTipocuentaTipoComercio_modificarInformacion_actualizarInformacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:onClick="cuentaTipoCliente_modificarInformacion_modificarDatos"
                    android:text="@string/btn_cuentaTipoComercio_modificarInformacion_actualizarInformacion"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>