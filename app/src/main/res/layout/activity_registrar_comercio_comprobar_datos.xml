<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrarComercio_comprobarDatos">

    <!--ScrollBar-->
    <ScrollView
        android:layout_width="390dp"
        android:layout_height="720dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Contenido: Título-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="100dp">

                <!--Título-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_titulo"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:typeface="serif" />

            </androidx.cardview.widget.CardView>

            <!--TextView: Mostrar nombre del usuario.-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mensaje Usuario-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_usuarioMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_usuarioMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--TextView: Usuario-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_registrarComercio_usuario_nombreUsuario"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/edt_registrarComercio_usuario_nombreUsuario"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>

            <!--Contenido: Mostrar correo-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mensaje Correo-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_correoMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_correoMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--TextView: Correo-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_registrarComercio_usuario_correo"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/edt_registrarComercio_usuario_correo"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />

            </androidx.cardview.widget.CardView>

            <!--Contenido: Mostrar contraseña-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mensaje Contraseña-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_contraseniaMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_contraseniaMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--TextView: Contraseña-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_contrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_registrarComercio_usuario_contrasenia"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/edt_registrarComercio_usuario_contrasenia"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>

            <!--Contenido: Mostrar nombre del comercio-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mostrar nombre del comercio-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_comercioMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_comercioMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--TextView: Nombre del comercio-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_comercio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_registrarComercio_usuario_verificarContrasenia"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/edt_registrarComercio_usuario_verificarContrasenia"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>

            <!--Contenido: Mostrar telefono del comercio.-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mostrar telefono-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_telefonoMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_telefonoMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--TextView: Telefono-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_registrarComercio_usuario_verificarContrasenia"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/edt_registrarComercio_usuario_verificarContrasenia"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>

            <!--Contenido: Servicios del comercio-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mostrar Servicios-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_serviciosMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_serviciosMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif"
                    tools:text="@string/tv_registrarComercio_comercio_servicio" />

                <!--TextView: Servicios_Venta-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_serviciosVenta"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:padding="20dp"
                    android:text="@string/ckbx_registrarComercio_comercio_servicio_Venta"
                    android:textSize="20sp" />

                <!--TextView: Servicios_Renta-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_serviciosRenta"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="140dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:padding="20dp"
                    android:text="@string/ckbx_registrarComercio_comercio_servicio_Renta"
                    android:textSize="20sp" />

                <!--TextView: Servicios_Refil-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_serviciosRefil"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="255dp"
                    android:layout_marginStart="255dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:padding="20dp"
                    android:text="@string/ckbx_registrarComercio_comercio_servicio_Refil"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <!--TextView: Dirección del comercio.-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="150dp">

                <!--TextView: Mensaje Dirección-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_direccionMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/tv_registrarComercio_comprobarDatos_direccionMensaje"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:typeface="serif" />

                <!--TextView: Dirección-->
                <TextView
                    android:id="@+id/tv_registrarComercio_comprobarDatos_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:autofillHints="@string/edt_registrarComercio_usuario_nombreUsuario"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/edt_registrarComercio_usuario_nombreUsuario"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>

            <!--Contenido: Pasar a la actividad "registrarComercio_comercio-->
            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="100dp">

                <!--Button: Intent (registrarComercio_comercio)-->
                <Button
                    android:id="@+id/btn_registrarComercio_comprobarDatos_finalizarRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/btn_registrarComercio_comprobarDatos_finalizarRegistro"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:typeface="serif" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>